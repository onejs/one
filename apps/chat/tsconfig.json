{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    // i want this for nice type import auto complete
    // but then it checks node_modules for this an errors
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node", "react", "vite/client"],
    "lib": ["dom", "esnext"]
  },
  "exclude": ["**/node_modules", "**/test", "**/dist", "**/types", "**/__tests__"],
  "typeAcquisition": {
    "enable": true
  }
}
